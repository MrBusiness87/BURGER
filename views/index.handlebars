<h1>EAT DA BURGER!</h1>

<h2>BURGERS HUNGRY FOR!</h2>

<ul>
  {{#each burger}}
  {{> burger/burger-block eaten=false}}
  {{/each}}
</ul>

<h2>BURGERS EATEN!</h2>

<ul>
  {{#each burgers}}
  {{#if eaten}}
  {{> burger/burger-block eaten=true}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">EATEN?</label><br>
    <input type="radio" name="devoured" value="1" checked> EATEN!<br>
  </div>

  <button type="submit">ADD BURGER</button>
</form>